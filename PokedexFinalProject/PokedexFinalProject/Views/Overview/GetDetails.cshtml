@model GetPokemonDetail_Result

@{
  
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetDetails</title>
    <style>
        img {
            border-color:#000000;
            border-style: solid;
            border-width:medium;
        }


    </style>
</head>
<body>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-9" >
            <div class="col-sm-3">
                <img src="@Url.Content(@Model.pathImg)" height="250" width="250" />
            </div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3" >

                <h3># @Model.PokemonID</h3>
                <h3>Nombre: @Model.Nombre</h3>
                <h3>Peso: @Model.Peso kg</h3>
                <h3>Altura: @Model.Altura m</h3>
            </div>
            <div class="col-sm-3">
                @{ 
                    
                }
                <h3>
                    Tipo1:@Model.TpID
                    @*<script> function getType(id) {  return "success" }</script>*@
                </h3>
                @if (Model.TpID2 != null)
                {
                    <h3>Tipo2: @Model.TpID2</h3>
                }
                else {
                    <h3> </h3>
                }
                <h3>Generacion: @Model.Generacion</h3>
                <h3>Habilidad: @Model.HabID</h3>
            </div>
        </div>
    </div>
    <br />
    <br />
</body>
</html>

<script type="text/javascript">
    getType(@Model.TpID)

</script>
